<div id="admin">
<div id="flotStats" style="width:95%;height:300px;"></div>
<div id="flotStats2" style="width:95%;height:300px;"></div>
<div id="flotStats3" style="width:95%;height:300px;"></div>


<script>
$(function() {
	//var numGuests = <%= raw @numGuests.to_json %>;
	var numUsers = <%= raw @numUsers.to_json %>;
	var numTasks = <%= raw @numTasks.to_json %>;
	//var numFolders = <%= raw @numFolders.to_json %>;
	var numCompletedTasks = <%= raw @numCompletedTasks.to_json %>;
	var numUserTasks = <%= raw @numUserTasks.to_json %>;
	var options = {
		xaxis: {
			mode: "time",
			twelveHourClock: true
		},
		legend: {
			position: "nw"
		}
	};
	$.plot($("#flotStats"), [{label: "<%= @numUsers.last.last %> Users", data: numUsers}, {label: "<%= @numCompletedTasks.last.last %> Completed User Tasks", data: numCompletedTasks}, {label: "<%= @numUserTasks.last.last %> User Tasks", data: numUserTasks}], options);
	$.plot($("#flotStats2"), [{label: "<%= @numUsers.last.last %> Users", data: numUsers}], options);
	$.plot($("#flotStats3"), [{label: "<%= @numTasks.last.last %> Tasks", data: numTasks}], options);
});
</script>

<table>
	<tr>
		<th>
			Email
		</th>
		<th>
			Folders
		</th>
		<th>
			Created
		</th>
		<th>
			Last Activity
		</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td>
				<%= user.email %>
			</td>
			<td>
				<%= user.folders.count %>
			</td>
			<td>
				<%= distance_of_time_in_words_to_now(user.created_at) if user.created_at %>
			</td>
			<td>
				<%= distance_of_time_in_words_to_now(user.last_activity_at) %>
			</td>
		</tr>
	<% end %>
</table>

<br><br>

<table>
	<tr>
		<th>
			Name
		</th>
		<th>
			Created
		</th>
	</tr>
	<% @tasks.each do |task| %>
		<tr>
			<td>
				<%= task.name %>
			</td>
			<td>
				<%= distance_of_time_in_words_to_now(task.created_at) if task.created_at %>
			</td>
		</tr>
	<% end %>
</table>

<br><br>

<% @folders.each do |folder| %>
	<%= folder.name %><br>
	<% folder.tasks.each do |task| %>
		<% unless task.hideTask %>
		- <%= task.name %><br>
		<% end %>
	<% end %>
	<br>
<% end %>
</div>